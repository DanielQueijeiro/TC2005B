            <h1 class="title"><%if(registrar){ %>Bienvenido<%} else {%>Hola de nuevo<% }%></h1>
            <% if(error) { %>
                <div class="notification is-danger">
                    <strong> <%= error %> </strong>
                </div>
            <% } %>
