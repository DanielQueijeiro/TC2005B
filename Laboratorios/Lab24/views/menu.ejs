<%- include('includes/head.ejs' , {username: username, permisos: permisos})%>

  <body class="has-background-link-light">
    <section class="section">
      <div class="container">
        <h1 class="title">Nuestro menú personalizable!</h1>

        <div class="field">
          <p class="control">
            <input id="buscar" class="input" type="text" placeholder="Buscar pizza" />
          </p>
        </div>

        <div id="respuesta_ajax">

          <div class="columns">
            <% if (menu.length < 1) { %>
              <div class="notification is-info">
                <button class="delete"></button>
                No existe pizza con ese id.
              </div>
              <% } %>

                <% let columns=0; %>
                  <% for (let pizza of menu) { %>
                    <% columns++ %>

                      <div class="column">
                        <div class="card">
                          <div class="card-image">
                            <figure class="image is-4by3">
                              <img src="/uploads/<%= pizza.imagen %>" alt="Placeholder image">
                            </figure>
                          </div>

                          <div class="card-content">
                            <div class="media">
                              <div class="media-l eft">
                                <figure class="image is-48x48">
                                  <img src="/uploads/<%= pizza.imagen %>" alt="Placeholder image">
                                </figure>
                              </div>
                              <div class="media-content">
                                <p class="title is-4">
                                  <%= pizza.nombre %>
                                </p>
                              </div>
                            </div>

                            <div class="content">
                              <p>Buena pizza!</p>
                            </div>
                          </div>
                        </div>
                      </div>

                      <% if (columns % 4==0) { %>
          </div>
          <div class="columns">
            <% } %>


              <% } %>

          </div>
        </div>
      </div>


    </section>
    <script>
      const accion_asincrona = () => {
        console.log('Buscando');
        const valor_busqueda = document.getElementById('buscar').value;
        console.log(valor_busqueda)
        //función que manda la petición asíncrona
        fetch('/crear/buscar/' + valor_busqueda, {
          method: 'GET',
          headers: {
            'Content-Type': 'application/json',
          }
        }).then((result) => {
          console.log(result);
          return result.json(); //Regresa otra promesa
        }).then((data) => {
          console.log(data);
          let html = '';

          html += `
            <div class="columns">`;

          if (data.pizzas.length < 1) {
            html += `
            <div class="notification is-info">
                <button class="delete"></button>
                No existe la pizza.            
            </div>`;
          }

          let columns = 0;
          for (let pizza of data.pizzas) {
            columns++;

            html += `
            <div class="column">
                <div class="card">
                    <div class="card-image">
                    <figure class="image is-4by3">
                        <img src="/uploads/${pizza.imagen}" alt="Imagen de ${pizza.nombre}">
                    </figure>
                    </div>
                    <div class="card-content">
                    <div class="media">
                        <div class="media-left">
                        <figure class="image is-48x48">
                            <img src="/uploads/${pizza.imagen}" alt="Imagen de ${pizza.nombre}">
                        </figure>
                        </div>
                        <div class="media-content">
                        <p class="title is-4">${pizza.nombre}</p>
                        <p class="subtitle is-6">@${pizza.nombre}</p>
                        </div>
                    </div>
                
                    <div class="content">
                      <p>Buena pizza!</p>
                      </div>
                    </div>
                </div>
            </div>`;

            if (columns % 4 == 0) {
              html += `</div>
                <div class="columns">`;
            }
          }

          html += `</div>`;
          document.getElementById('respuesta_ajax').innerHTML = html;
        }).catch(err => {
          console.log(err);
        });
      };
      document.getElementById('buscar').onkeyup = accion_asincrona;
    </script>
    <%- include('includes/foot.ejs') %>
  </body>

  </html>